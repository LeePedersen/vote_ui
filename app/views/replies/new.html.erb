<%= render "layouts/errors", :object => @user %>

<%= render "layouts/nav_bar" %>
<h1 class="forum-header">Reply to <%= @post.title %></h1>
<p class="reply-content"><%= @post.content %></p>

<div class="container reply-form">
  <%= form_for [@post, @reply] do |f| %>
    <%= f.hidden_field(:name, :value => @user.name) %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.submit %><br>
  <% end %>
</div>
